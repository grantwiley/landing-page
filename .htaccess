RewriteEngine On

# Ensure proper base
RewriteBase /

# Remove .html extension
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}.html -f
RewriteRule ^([^/]+)/?$ $1.html [NC,L]

# Redirect /index.html to /
RewriteRule ^index\.html$ / [R=301,L]

# Handle 404 errors
ErrorDocument 404 /404.html